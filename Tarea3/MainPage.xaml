<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea3.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#FF9900" 
               Padding="24" 
               CornerRadius="0">

            <Label Text="Tarea 3" 
                   HorizontalTextAlignment="Center" 
                   TextColor="White" 
                   FontSize="36"/>
        </Frame>

        <Label Text="Nombres:"/>
        <Entry x:Name="nom" Keyboard="Text"/>

        <Label Text="Apellidos:" />
        <Entry x:Name="ape" Keyboard="Text"/>

        <Label Text="Edad:" />
        <Entry x:Name="edad" Keyboard="Numeric"/>

        <Label Text="Correo Electrónico:" />
        <Entry x:Name="mail" Keyboard="Email"/>

        <Label Text="Dirección:" />
        <Entry x:Name="address" Keyboard="Text"/>

        <StackLayout Orientation="Horizontal"  BackgroundColor="White" Padding="2,1,2,1" VerticalOptions="Center" HorizontalOptions="Center">
        <Button Text="Guardar" 
                x:Name="btnGuardar"
                WidthRequest="200"
                Clicked="btnGuardar_Clicked"
                HorizontalOptions="Center" 
                BackgroundColor="#FF9900" 
                TextColor="White"
                CornerRadius="20"
                Margin="10"/>

        </StackLayout>
    </StackLayout>

</ContentPage>
